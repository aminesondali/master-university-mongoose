<div class="container">
    <h1> Insertion Master</h1>
    <form action="/insert" method="post">
        <div class="form-group">
            <label>Master Name: </label>
            <input class="form-control" type="text" name="masterName" required>
        </div>

        <div class="form-group">
            <label>Departement:</label>
            <input class="form-control" type="text" name="departement" required>
        </div>

        <div class="form-group">
            <label>chef departement </label>
            <input class="form-control" type="text" name="chefDept" required>
        </div>

        <div class="form-group">
            <label>coordinateur du master:</label>
            <input class="form-control" type="text" name="coordinateur" required>
        </div>
        <div class="form-group">
            <label >Nombres des professeurs</label>
            <input type="number" name="nbrProfesseurs" min="1" max="30">
        </div>
        <div class="form-group">
            <label >Nombres des etudiants</label>
            <input type="number" name="nbrEtudiants" min="1" max="60">
        </div>
        <div class="form-group">
            <label >Nombres des modules</label>
            <input type="number"  name="nbrModules" min="1" max="30">
        </div>

        <button type="submit" class="btn btn-md btn-success">Ajouter Master</button>

    </form>
</div>
