<div class="container">

  <h1 class="text-center"> Liste des masters</h1>
  </br>

  <table class="table">
    <thead class="table-primary">
      <tr>
        <th scope="col">ObjectID</th>
        <th scope="col">Master Name</th>
        <th scope="col">Departement</th>
        <th scope="col">Chef Departement</th>
        <th scope="col">Coordinateur</th>
        <th scope="col">Nombre Profs</th>
        <th scope="col">Nombre Modules</th>
        <th scope="col">Nombre Etudiants</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody class="table table-striped">
      {{#each items }}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.masterName}}</td>
        <td>{{this.departement}}</td>
        <td>{{this.chefDept}}</td>
        <td>{{this.coordinateur}}</td>
        <td>{{this.nbrProfesseurs}}</td>
        <td>{{this.nbrModules}}</td>
        <td>{{this.nbrEtudiants}}</td>
        <td> <a class="btn btn-warning btn-sm" href="/update">o</a>
          <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
            data-target="#exampleModalCenter">x</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete Master</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/masterDelete" method="post">
          <div class="form-group">
            <label>Id: </label>
            <input class="form-control" type="text" name="id" required>
          </div>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
